   <div class="container">
				
      <div class="row">
        <div class="span8">
      		<h1 style="margin-top:15px;">Openfind Mailcloud Service</h1>
      		<h2 style="color:white;padding-left:25px;font-weight:normal;">Focus Mail</h2>
        </div>
        <div class="span4">
      	  <div class="sign_in_bkground">
      		  <img src="/images/sign_in/arrow.png" style="left:-20px;bottom:-30px;position:absolute;">
      		  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'new_user', :id => 'new_user') do |f| %>
      		    <table><tr><td>
      				<h3>
      				  登陆系统 
      				</h3>
      			  </td></tr>
      		      <tr><td>
      				<div>
      				<%= f.email_field :email, :placeholder => '请输入注册邮箱地址'%> 
      				</div>
      			  </td></tr>
      			  <tr><td>
      				<div>
      				<%= f.password_field :password, :placeholder => '请输入您的密码' %>
      				</div>
      			  </td></tr>
      			  <tr><td>
      				<% if devise_mapping.rememberable? -%>
                         保持登录 <%= f.check_box :remember_me %> 
                       <% end -%>
                   </td></tr>
      			   <tr><td>
                     <div><%= f.submit "登录", :class => 'btn btn-primary'%></div>
                     <div style="padding: 10px;">
		    		   <%= render :partial => "devise/shared/links" %>
		    	     </div>
                   </td></tr>
                 </table>
              <% end %>
	      </div>
	    </div>
	  </div>
	

