$('#<%= dom_id @entry %>').addClass('hidden');
$('#<%= dom_id @entry.template %> .template_edit<%= dom_id @entry %>').removeClass('hidden');
$("#<%= dom_id @entry.template %> .template_form<%= dom_id @entry %>").html("<%= j render "form" %>");
str = $("#<%= dom_id @template %> select").val();
if(str == "select" || str == "multiselect"){
  $("#<%= dom_id @template %>_collection").show();
} else {
  $("#<%= dom_id @template %>_collection").hide();
}
$("#<%= dom_id @template %> select").change(function () {
  var str = "";
  str += $(this).val();
  if(str == "select" || str == "multiselect"){
    $("#<%= dom_id @template %>_collection").show();
  } else {
    $("#<%= dom_id @template %>_collection").hide();
  }
});