<script type="text/javascript">
  $(function(){
     var pcount = $(".article .km-info").children("p").length;
     $("p").hide();
     $(".article").css("overflow","auto");
     $('.toggle').click(function(){  
       if($("p:visible").length>pcount/2)
          $("p").hide(1000);
        else{
				      $("p:hidden").show(1000);
				      $('.article').toggleClass("overflow-y");
         }
      });
      $('.km-info').click(function(){
       $p=$(this).find('p');
       if($p.is(":visible")) $p.hide();
       else                  $p.show();
      });   
  });  
</script> 


