$("#templates_form").html("<%= j render :partial => 'form' %>");
$("#templates_form > form").addClass("box");
$("#fjzip").click(function(){
	if($(this).text() == "附件上传")
	{
		$("#htmlsource").addClass("hidden");
		$("#zipfile").removeClass("hidden");
		$(this).text("内容填写");
	}
	else
	{
		$("#htmlsource").removeClass("hidden");
		$("#zipfile").addClass("hidden");
		$(this).text("附件上传");
	}
});
